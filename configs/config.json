{
  "project": "eurpln_forecast",
  "currency": "EUR",
  "base": "PLN",
  "nbp_table": "A",
  "target_field": "mid",

  "date_range": {
    "start": "2010-01-01",
    "end": "TODAY"
  },

  "window_W": 60,
  "horizons_H": [1, 7, 30, 60],

  "split": {
    "type": "fixed",
    "val_size": 130,
    "test_size": 260
  },

  "features": {
    "lags": true,
    "delta": true,
    "logret": true,
    "rolling_windows": [5, 10, 20, 60],
    "ema_spans": [10, 20],
    "include_calendar": true,
    "calendar_mode": "onehot"
  },

  "tuning": {
    "use_timeseries_cv": true,
    "tscv_splits": 5,
    "n_iter": 40
  },
  "calendar": {
    "enabled": true,
    "cyclic": true
  },

  "seed": 123,

  "output": {
    "runs_dir": "runs",
    "data_dir": "data",
    "log_name": "run.log"
  }
}
